{
  "variables": {
    "packer_user": "packer",
    "packer_password": "packer",
    "cpus": "2",
    "memory": "4096",
    "headless": "true",
    "iso_name": "{{pwd}}/iso/",
    "iso_checksum": "",
    "iso_checksum_type": "",
    "guest_os_type": "Windows2012_64",
    "autounattend": "{{pwd}}/answer_files/2012_r2/Autounattend.xml",
    "vagrant_output_dir": "{{pwd}}/vagrant_box"
  },
  "builders": [
    {
      "name": "win-vbox-base",
      "type": "virtualbox-iso",
      "iso_urls": [
        "{{user `iso_name`}}",
        "{{user `iso_repo_url`}}/{{user `iso_repo_directory`}}/{{user `iso_name`}}"
      ],
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "boot_wait": "2m",
      "communicator": "winrm",
      "guest_os_type": "{{user `guest_os_type`}}",
      "headless": "{{user `headless`}}",
      "winrm_username": "{{user `packer_user`}}",
      "winrm_password": "{{user `packer_password`}}",
      "winrm_use_ssl": "true",
      "winrm_insecure": "true",
      "winrm_timeout": "8h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "shutdown_timeout": "1h",
      "disk_size": 40960,
      "floppy_files": [
        "{{pwd}}/answer_files/2012_r2/Autounattend.xml",
	"{{pwd}}/floppy/ConfigureRemotingForAnsible.ps1"
      ],
      "vboxmanage": [
        ["modifyvm","{{.Name}}","--cpus","{{user `cpus`}}"],
        ["modifyvm","{{.Name}}","--memory","{{user `memory`}}"]
      ]
    },
    {
      "name": "win-vbox-noupdates",
      "type": "virtualbox-iso",
      "iso_urls": [
        "{{user `iso_name`}}",
        "{{user `iso_repo_url`}}/{{user `iso_repo_directory`}}/{{user `iso_name`}}"
      ],
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "boot_wait": "2m",
      "communicator": "winrm",
      "guest_os_type": "{{user `guest_os_type`}}",
      "guest_additions_mode": "disable",
      "headless": "{{user `headless`}}",
      "winrm_username": "{{user `packer_user`}}",
      "winrm_password": "{{user `packer_password`}}",
      "winrm_use_ssl": "true",
      "winrm_insecure": "true",
      "winrm_timeout": "8h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "shutdown_timeout": "1h",
      "disk_size": 30720,
      "floppy_files": [
        "{{pwd}}/answer_files/2012_r2/Autounattend.xml",
	"{{pwd}}/floppy/ConfigureRemotingForAnsible.ps1"
      ],
      "vboxmanage": [
        ["modifyvm","{{.Name}}","--cpus","{{user `cpus`}}"],
        ["modifyvm","{{.Name}}","--memory","{{user `memory`}}"]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "{{pwd}}/ansible/playbook.yml",
      "extra_arguments": [
	"--connection", "packer",
	"--extra-vars", "ansible_shell_type=powershell ansible_shell_executable=None"
      ],
      "except": ["win-vbox-base","win-vbox-noupdates"]
    },	
    {
      "__comment__": "need to populate the iso_* variables with proper values",
      "type": "powershell",
      "scripts": [
	"{{pwd}}/scripts/setup-pswindowsupdate.ps1",
	"{{pwd}}/scripts/install-choco.ps1",
	"{{pwd}}/scripts/install-wmf5.ps1"
      ],
      "elevated_user": "packer",
      "elevated_password": "packer"
    },	
    {
      "type": "windows-restart",
      "restart_timeout": "1h"
    },	
    {
      "type": "powershell",
      "script": "{{pwd}}/scripts/install-servicepacks.ps1",
      "elevated_user": "packer",
      "elevated_password": "packer",
      "only": ["win-vbox-base"]
    },
    {
      "type": "windows-restart",
      "restart_timeout": "1h",
      "only": ["win-vbox-base"]
    },	
    {
      "type": "powershell",
      "script": "{{pwd}}/scripts/install-critical.ps1",
      "elevated_user": "packer",
      "elevated_password": "packer",
      "only": ["win-vbox-base"]
    },
    {
      "type": "windows-restart",
      "restart_timeout": "1h",
      "only": ["win-vbox-base"]
    },	
    {
      "type": "powershell",
      "script": "{{pwd}}/scripts/install-updaterollups.ps1",
      "elevated_user": "packer",
      "elevated_password": "packer",
      "only": ["win-vbox-base"]
    },
    {
      "type": "windows-restart",
      "restart_timeout": "1h",
      "only": ["win-vbox-base"]
    },	
    {
      "type": "powershell",
      "script": "{{pwd}}/scripts/install-security.ps1",
      "elevated_user": "packer",
      "elevated_password": "packer",
      "only": ["win-vbox-base"]
    },
    {
      "type": "windows-restart",
      "restart_timeout": "1h",
      "only": ["win-vbox-base"]
    },	
    {
      "type": "powershell",
      "script": "{{pwd}}/scripts/install-allupdates.ps1",
      "elevated_user": "packer",
      "elevated_password": "packer",
      "only": ["win-vbox-base"]
    },
    {
      "type": "windows-restart",
      "restart_timeout": "1h",
      "only": ["win-vbox-base"]
    },	
    {
      "type": "powershell",
      "script": "{{pwd}}/scripts/post-cleanup.ps1",
      "elevated_user": "packer",
      "elevated_password": "packer"
    },
    {
      "type": "windows-restart",
      "restart_timeout": "1h"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "{{user `vagrant_output_dir`}}/base-win2012r2.box",
      "compression_level": 9,
      "only": ["win-vbox-base"]
    }
  ]
}
